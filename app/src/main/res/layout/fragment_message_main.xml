<?xml version="1.0" encoding="utf-8"?>
<in.srain.cube.views.ptr.PtrClassicFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ptrFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:ptr_duration_to_close="300"
    app:ptr_duration_to_close_header="2000"
    app:ptr_keep_header_when_refresh="true"
    app:ptr_pull_to_fresh="true"
    app:ptr_ratio_of_header_height_to_refresh="1.4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commentTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_xxx"
            android:paddingBottom="@dimen/padding8"
            android:paddingLeft="@dimen/padding14"
            android:paddingTop="@dimen/padding8"
            android:text="@string/comment1"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/colorMainGray"
            android:visibility="gone"/>
        <View style="@style/Line"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/commentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>

        <LinearLayout
            android:id="@+id/allComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_xxx"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding8"
            android:paddingTop="@dimen/padding8"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allcomment"
                android:textSize="@dimen/text_middle"
                android:textColor="@color/colorMainGray"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginTop="@dimen/margin2"
                android:src="@mipmap/right_arrow"/>
        </LinearLayout>
    </LinearLayout>

</in.srain.cube.views.ptr.PtrClassicFrameLayout>