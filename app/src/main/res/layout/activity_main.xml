<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.yanxing.titlebarlibrary.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img_visible="false"
        app:backgroundColor="@color/colorPrimary"
        app:title_main="@string/home"
        app:title_main_center="true"
        app:title_main_color="@color/colorMainDark"/>

    <View style="@style/Line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:persistentDrawingCache="animation"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <ImageView
            android:id="@+id/home"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:src="@mipmap/home_press"/>

        <ImageView
            android:id="@+id/message"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:src="@mipmap/message"/>


        <ImageView
            android:id="@+id/send"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:src="@mipmap/add"/>

        <ImageView
            android:id="@+id/discover"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@mipmap/discover"/>

        <ImageView
            android:id="@+id/me"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:src="@mipmap/me"/>
    </LinearLayout>

</LinearLayout>
